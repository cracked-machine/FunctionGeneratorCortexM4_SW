#include "DisplayManager.h"

#include <stdint.h>
#include <stdio.h>
#include "ILI9341_STM32_Driver.h"
#include "ILI9341_GFX.h"
#include "rng.h"

uint16_t button_height = ILI9341_SCREEN_HEIGHT-50;
uint16_t button_width = ILI9341_SCREEN_WIDTH/4;
uint16_t button_x_positions[4] = { 0, button_width, button_width*2, button_width*3 };

void dm_update_display()
{
	ILI9341_Draw_Filled_Rectangle_Coord(0, button_height, button_width, ILI9341_SCREEN_HEIGHT, DARKCYAN);
	ILI9341_Draw_Filled_Rectangle_Coord(button_width, button_height, button_width*2, ILI9341_SCREEN_HEIGHT, DARKGREEN);
	ILI9341_Draw_Filled_Rectangle_Coord(0, button_height, button_width, ILI9341_SCREEN_HEIGHT, YELLOW);
	ILI9341_Draw_Filled_Rectangle_Coord(0, button_height, button_width, ILI9341_SCREEN_HEIGHT, CYAN);
	//dm_test_screen();
}

void dm_test_screen()
{
	  //----------------------------------------------------------FILLED CIRCLES EXAMPLE

	  			uint16_t xr = 0;
	  			uint16_t yr = 0;
	  			uint16_t radiusr = 0;
	  			uint16_t colourr = 0;
	  			xr = LL_RNG_ReadRandData32(RNG);
	  			yr = LL_RNG_ReadRandData32(RNG);
	  			radiusr = LL_RNG_ReadRandData32(RNG);
	  			colourr = LL_RNG_ReadRandData32(RNG);

	  			xr &= 0x01FF;
	  			yr &= 0x01FF;
	  			radiusr &= 0x001F;

	  			ILI9341_Draw_Filled_Circle(xr, yr, radiusr/2, colourr);

	  			char enc_buff[13] = "";
	  			snprintf(enc_buff, sizeof(enc_buff), "%d\n", new_enc_value);
	  			ILI9341_Draw_Text(enc_buff, 10, 20, BLACK, 5, WHITE);

	  			ILI9341_Draw_Text(control_pressed, 10, 60, BLACK, 5, WHITE);
	  		//HAL_Delay(1);
}
