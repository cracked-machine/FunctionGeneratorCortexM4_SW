#include "EventManager.h"

eSystemState eNextState = Idle_state;
eSystemState eNewEvent;

/*
 *
 * 		Set by NVIC interrupt handlers
 */
void EM_SetNewEvent(eSystemState pState)
{
	eNewEvent = pState;
}

void EM_ProcessEvent()
{
	while(1)
	{
		switch(eNextState)
		{
			case Idle_state:

				break;

			case Func_state:

				break;
			case Freq_state:

				break;
			case Ampl_state:

				break;
			case Bias_state:

				break;
		}
	}
}
