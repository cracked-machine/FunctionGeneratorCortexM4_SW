#include "SignalManager.h"

eEncoder_Direction eNewEncoderDirection = ENCODER_REVERSE;

uint16_t SM_GetEncoderValue()
{
	if(eNewEncoderDirection)
	{
		return ENCODER_TIMER->ARR - ENCODER_TIMER->CNT;
	}
	else
	{
		return ENCODER_TIMER->CNT;
	}
}

eEncoder_Direction getEncoderDirection()
{
	return eNewEncoderDirection;
}
