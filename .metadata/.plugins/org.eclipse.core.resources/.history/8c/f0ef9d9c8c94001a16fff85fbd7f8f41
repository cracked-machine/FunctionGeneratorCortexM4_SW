#include "BiasOutput.h"

#include "gpio.h"
#include "dac.h"

#include "SignalManager.h"

eBias_Polarity eBiasPolarity = NORMALBIAS;
uint16_t u16DC_Bias_Voltage  = 0;


/*
 *
 *	@brief
 *
 *	@param None
 *	@retval None
 *
 */
eBias_Polarity BO_GetBiasPolarity()
{
	return eBiasPolarity;
}


/*
 *
 *	@brief
 *
 *	@param None
 *	@retval None
 *
 */
uint16_t BO_GetBiasVoltage()
{
	return u16DC_Bias_Voltage;
}


/*
 *
 *	@brief
 *
 *	@param None
 *	@retval None
 *
 */
void BO_ModifyOutput(uint16_t pEncoderValue)
{
	// apply negative dc bias
	if(pEncoderValue < BIAS_CENTER) {

		eBiasPolarity = INVERSEBIAS;
		u16DC_Bias_Voltage = pEncoderValue;

		HAL_DAC_SetValue(	&hdac1,
							DAC1_CHANNEL_2,
							DAC_ALIGN_12B_R,
							(BIAS_CENTER - u16DC_Bias_Voltage) * BIAS_MAG);

		HAL_GPIO_WritePin(	DCBIAS_INVERT_GPIO_Port,
							DCBIAS_INVERT_Pin,
							GPIO_PIN_SET);
	}
	// apply positive dc bias
	if(pEncoderValue >= BIAS_CENTER) {

		eBiasPolarity = NORMALBIAS;
		u16DC_Bias_Voltage = pEncoderValue;

		HAL_DAC_SetValue(	&hdac1,
							DAC1_CHANNEL_2,
							DAC_ALIGN_12B_R,
							(u16DC_Bias_Voltage - BIAS_CENTER) * BIAS_MAG);

		HAL_GPIO_WritePin(	DCBIAS_INVERT_GPIO_Port,
							DCBIAS_INVERT_Pin,
							GPIO_PIN_RESET);
	}
}


/*
 *
 *	@brief
 *
 *	@param None
 *	@retval None
 *
 */
uint32_t BO_GetOutputBias()
{
	return HAL_DAC_GetValue(&hdac1, DAC1_CHANNEL_2);
}




