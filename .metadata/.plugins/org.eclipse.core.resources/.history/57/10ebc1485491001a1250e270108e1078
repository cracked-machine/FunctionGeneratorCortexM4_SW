#ifndef SRC_EVENTMANAGER_EVENTMANAGER_H_
#define SRC_EVENTMANAGER_EVENTMANAGER_H_

#include <stdint.h>

#define EM_SWV_DEBUG

typedef enum
{
	Idle_State = 0x00U,		// main display
	Func_Menu_State


} eSystemState;

typedef enum
{
	Idle_Event,

	Func_Menu_Event,					// user presses blue function menu button
	Func_Set_Event,						// user turns rotary encoder in function menu

	Freq_Menu_Event,
	Freq_Set_Event

	Ampl_Menu_Event,
	Ampl_Set_Event

	Bias_Menu_Event,
	Bias_Set_Event

	Adjust_Confirmed_Event

} eSystemEvent;

typedef enum
{
	Sine_Out_Mode,
	Square_Out_Mode,
	Saw_Out_Mode,
	RevSaw_Out_Mode,
	Triangle_Out_Mode,
	Impulse_Out_Mode

} eOutput_mode;


void EM_SetNewEvent(eSystemEvent pEvent);
void EM_ProcessEvent();
eOutput_mode EM_GetOutputMode();
void EM_SetEncoderValue(uint32_t pValue);
eSystemState EM_GetSystemState();

#endif /* SRC_EVENTMANAGER_EVENTMANAGER_H_ */
