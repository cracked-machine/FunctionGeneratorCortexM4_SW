#ifndef SRC_EVENTMANAGER_EVENTMANAGER_H_
#define SRC_EVENTMANAGER_EVENTMANAGER_H_

typedef enum
{
	Idle_state = 0x00U,		// idle
	Func_state,				// edit output function
	Freq_state,				// edit output frequency
	Ampl_state,				// edit output amplitude
	Bias_state				// edit output DC bias
} eSystemState;

typedef enum
{
	Func_Adjust_Event,
	Freq_Adjust_Event,
	Ampl_Adjust_Event,
	Bias_Adjust_Event
} eSystemEvent;

void EM_SetNewEvent(eSystemState pState);

#endif /* SRC_EVENTMANAGER_EVENTMANAGER_H_ */
